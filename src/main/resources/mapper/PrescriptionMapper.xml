<mapper namespace="com.myheart.iylm.mapper.PrescriptionMapper">
    <sql id="selectSearchWhere">

    </sql>

    <select id="selectList" resultType="dataMap">
        SELECT  *
        FROM    tb_prescription
    </select>
    
    <insert id="insert">
        INSERT INTO tb_prescription ( 
            user_no
            ,main_disease_cd
            ,sub_disease_cd
        ) VALUES (
            #{userNo}
            ,#{mainDiseaseCd}
            ,#{subDiseaseCd}
        )
    </insert>

    <insert id="insertDetail">
        INSERT INTO tb_prescription_detail ( 
            ps_no
            ,drug_cd
            ,dose_cnt
            ,day_cnt
        ) VALUES (
            #{psNo}
            ,#{drugCd}
            ,#{doseCnt}
            ,#{dayCnt}
        )
    </insert>
</mapper>